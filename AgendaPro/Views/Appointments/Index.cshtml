@model IEnumerable<AgendaPro.Models.Scheduling.Appointment>

@{
    ViewData["Title"] = "Lista de Agendamentos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/appointments.css" />
}

<div class="container-appointments">
    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-primary">Novo Agendamento</a>
    </p>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nome do Cliente</th>
                <th>E-mail do Cliente</th>
                <th>Data e Hora</th>
                <th>Serviço</th>
                <th>Status</th>
                <th>Tipo</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ClientName</td>
                    <td>@item.ClientEmail</td>
                    <td>@item.Date.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@item.Service?.Name</td>
                    <td>@item.AppointmentStatus?.Name</td>
                    <td>@item.AppointmentType?.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
