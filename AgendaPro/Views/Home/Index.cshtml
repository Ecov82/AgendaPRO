@{
    ViewData["Title"] = "Dashboard Inicial";
}

<style>
    .container-home {
        max-width: 800px;
        margin: 50px auto;
        padding: 30px;
        text-align: center;
        border-radius: 10px;
        background-color: #f2f2f2;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        font-family: Arial, sans-serif;
    }

        .container-home h1 {
            color: #333;
            margin-bottom: 20px;
        }

    .home-button {
        display: inline-block;
        padding: 12px 25px;
        margin: 10px;
        text-decoration: none;
        color: white;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn-services {
        background-color: #007bff;
    }

        .btn-services:hover {
            background-color: #0056b3;
        }

    .btn-appointments {
        background-color: #28a745;
    }

        .btn-appointments:hover {
            background-color: #1e7e34;
        }

    .doc-link {
        display: block;
        margin-top: 20px;
        color: #555;
        text-decoration: underline;
    }
</style>

<div class="container-home">
    <h1>Bem-vindo ao AgendaPRO</h1>
    <p>Escolha uma das opções abaixo:</p>

    <a href="@Url.Action("Index", "Services")" class="home-button btn-services">Ver Serviços</a>
    <a href="@Url.Action("Create", "Appointments")" class="home-button btn-appointments">Criar Agendamento</a>

    <a class="doc-link" href="https://learn.microsoft.com/aspnet/core" target="_blank" rel="noopener noreferrer">
        Documentação ASP.NET Core
    </a>
</div>
